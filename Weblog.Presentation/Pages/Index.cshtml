                                            <input type="checkbox" class="form-check-input" id="checkbox">
                                            <label for="checkbox">من با شرایط و قوانین موافق هستم</label>
                                        </div>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
